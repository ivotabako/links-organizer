<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:viewmodels="clr-namespace:LinksOrganizer.ViewModels"
    x:Class="LinksOrganizer.Views.LinkItemView" >

    <ContentPage.BindingContext>
        <viewmodels:LinkItemViewModel></viewmodels:LinkItemViewModel>
    </ContentPage.BindingContext>
    
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Title" />
        <Entry Text="{Binding Name}"  />
        <Label Text="Info" />
        <Entry Text="{Binding Info}" />
        <Label Text="Link" />
        <Entry Text="{Binding Link}"  />
        <Button Text="Copy" Command="{Binding CopyLinkItemCommand}" />
        <Button Text="Open" Command="{Binding OpenLinkItemCommand}" />
        <Button Text="Save" Command="{Binding SaveLinkItemCommand}" IsEnabled="{Binding CanSave}"  />
        <Button Text="Delete" Command="{Binding DeleteLinkItemCommand}" />
        <Button Text="Cancel" Command="{Binding CancelLinkItemCommand}" />
    </StackLayout>
</ContentPage>