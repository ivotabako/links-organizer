<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:resources="clr-namespace:LinksOrganizer.Resx"
    x:Class="LinksOrganizer.Views.LinkItemView" 
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid BackgroundColor="{DynamicResource PrimaryColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="{x:Static resources:AppResources.TitleLabel}" Style="{StaticResource SmallLabelStyle}"  
               Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1" />
        <Entry Text="{Binding Name}" Style="{StaticResource LinkItemEntryStyle}" Grid.Column="0"
                    Grid.Row="1"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1" />
        <Label Text="{x:Static resources:AppResources.InfoLabel}" Style="{StaticResource SmallLabelStyle}" Grid.Column="0"
                    Grid.Row="2"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1" />
        <Entry Text="{Binding Info}" Style="{StaticResource LinkItemEntryStyle}" Grid.Column="0"
                    Grid.Row="3"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1" />
        <Label Text="{x:Static resources:AppResources.LinkLabel}"  Style="{StaticResource SmallLabelStyle}" Grid.Column="0"
                    Grid.Row="4"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1" />
        <Entry Text="{Binding Link}" Style="{StaticResource LinkItemEntryStyle}" Grid.Column="0"
                    Grid.Row="5"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1" />

        <ImageButton
                    Grid.Column="1"
                    Grid.Row="4"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    BackgroundColor="Transparent"
                    WidthRequest="55" HeightRequest="55"
                    Padding="3"
                    Margin="3"
                    Source="copy.png"
                    Command="{Binding CopyLinkItemCommand}">
        </ImageButton>

        <ImageButton
                    Grid.Column="1"
                    Grid.Row="5"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    BackgroundColor="Transparent"
            WidthRequest="55" HeightRequest="55"
                    Padding="3"
                    Margin="3"
                    Source="browse.png"
                    Command="{Binding OpenLinkItemCommand}">
        </ImageButton>

                <ImageButton
                    Grid.Column="0"
                    Grid.Row="6"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                        WidthRequest="55" HeightRequest="55"
                        BackgroundColor="Transparent"
                        IsEnabled="{Binding CanSave}"
                        Padding="3"
                        Margin="10"
                        Source="save.png"
                        HorizontalOptions="Start"
                        Command="{Binding SaveLinkItemCommand}">
                </ImageButton>

                <ImageButton
                    Grid.Column="1"
                    Grid.Row="6"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    BackgroundColor="Transparent"
                    IsEnabled="{Binding CanDelete}"
                    WidthRequest="55" HeightRequest="55"
                    Padding="3"
                    Margin="10"
                    VerticalOptions="End"
                    Source="delete.png"
                    Command="{Binding DeleteLinkItemCommand}">
                </ImageButton>

        <ImageButton
                    Grid.Column="1"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    BackgroundColor="Transparent"
                    WidthRequest="55" HeightRequest="55"
                    Padding="3"
                    Margin="3"
                    Source="close.png" 
                    Command="{Binding CancelLinkItemCommand}">
        </ImageButton>
    </Grid>
</ContentPage>